<div class="results-block">
   <%= render 'layouts/messages' %>
 </div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class='col-md-12'>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><%= link_to 'View Profile', '#',
                                        class: 'btn btn-sm btn-outline-success' %></td>
            <% if !current_user.friends.include?(friend) %>
              <td><%= link_to 'Follow friend?', friendships_path(user: current_user, friend: friend), class: "btn btn-sm btn-outline-success", 
                                                method: :post, data: { confirm: 'Are you sure you want to follow this user?' } %></td>
            <% else %>
              <td><span class='badge rounded-pill bg-success'>You are friends</span></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %> 
